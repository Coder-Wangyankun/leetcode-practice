{
  "name": "leetcode-practice",
  "version": "1.0.0",
  "description": "A leetcode practice project",
  "main": "index.js",
  "type": "module",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "imports": {
    "#common/*": "./common/*",
    "#resources/*": "./resources/*"
  },
  "packageManager": "pnpm@7.0.0+",
  "bin": {
    "lk": "bin/lk.js",
    "lf": "bin/lf.js",
    "lc": "bin/lc.js"
  },
  "scripts": {
    "leet-create": "node bin/lc.js -d src",
    "leet-check": "node bin/lk.js -d src",
    "leet-find": "node bin/lf.js -d src",
    "easy-find": "node common/view/finder.view.js",
    "easy-create": "node common/view/create.view.js",
    "easy-check": "node common/view/check.view.js",
    "build-cli": "node esbuild.config.js",
    "publish-cli": "cd pl-cli && npm publish --registry https://registry.npmjs.org/",
    "unpublish-cli": "cd pl-cli && npm unpublish --force --registry https://registry.npmjs.org/\n",
    "commit": "cz",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix --ext .js,jsx,cjs,mjs ./common"
  },
  "author": "EternalHeart",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.14",
    "jsdom": "^23.2.0",
    "realm": "^12.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^1.2.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "rimraf": "^5.0.5",
    "vite": "^5.0.11",
    "vitest": "^1.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
