{
  "github": {
    "release": true,
    "web": true,
    "autoGenerate": true
  },
  "git": {
    "commitMessage": "feat: v${version}",
    "tagName": "cli-v${version}",
    "tag": true,
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": false,
  "hooks": {
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  }
}
